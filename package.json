{
    "name": "myanchat",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "test": "pnpm test:doc && pnpm test:lint && pnpm test:tsc && pnpm test:unit && pnpm test:pw",
        "test:unit": "jest --passWithNoTests",
        "test:tsc": "tsc --noEmit",
        "test:lint": "eslint **/*.{js,ts,tsx}",
        "test:doc": "prettier --check \"**/*.md\"",
        "format": "lint-staged",
        "watch": "tsc --build --watch --verbose",
        "start": "concurrently -n watch \"pnpm watch\"",
        "build:packs": "tsc --build --force --verbose",
        "postinstall": "husky install && tsc --build --verbose",
        "changeset": "changeset",
        "release": "changeset publish",
        "clear": "rimraf packages/*/{lib,tsconfig.tsbuildinfo,node_modules} && rimraf node_modules",
        "cz": "git-cz"
    },
    "devDependencies": {
        "@changesets/cli": "^2.16.0",
        "@commitlint/cli": "^12.1.1",
        "@commitlint/config-conventional": "^12.1.1",
        "@types/jest": "^26.0.22",
        "@typescript-eslint/eslint-plugin": "^4.31.0",
        "@typescript-eslint/parser": "^4.31.0",
        "concurrently": "^6.2.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.21.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-header": "^3.1.1",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^4.3.1",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-tsdoc": "^0.2.14",
        "git-cz": "^4.7.6",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "lint-staged": "^11.1.2",
        "prettier": "^2.4.0",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.5.4",
        "typescript": "^4.4.4"
    },
    "config": {
        "commitizen": {
          "path": "cz-conventional-changelog"
        }
      }
}
