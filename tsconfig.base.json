{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "target": "es2017",
        "module": "commonjs",
        "lib": ["es2017", "esnext.asynciterable"],
        "noEmitOnError": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "pretty": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "preserveWatchOutput": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@myancommerce/core": ["apps/core/src/index.ts"],
            "@myancommerce/generated": ["libs/generated/src/index.ts"],
            "@myancommerce/nsx-config": ["libs/nsx-config/src/index.ts"],
            "@myancommerce/nsx-logger": ["libs/nsx-logger/src/index.ts"],
            "@myancommerce/shared": ["libs/shared/src/index.ts"],
            "@myancommerce/testing": ["libs/testing/src/index.ts"]
        }
    },
    "include": ["apps", "libs"],
    "exclude": ["node_modules", "tmp"]
}
