{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "target": "es2017",
        "module": "commonjs",
        "lib": ["es2017", "esnext.asynciterable"],
        "noEmitOnError": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "pretty": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "preserveWatchOutput": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@myancommerce/core": ["apps/core/src/index.ts"],
            "@myancommerce/generated": ["libs/generated/src/index.ts"],
            "@myancommerce/nox-common": ["libs/nox-common/src/index.ts"],
            "@myancommerce/nsx-administrator": [
                "libs/nsx-administrator/src/index.ts"
            ],
            "@myancommerce/nsx-auth": ["libs/nsx-auth/src/index.ts"],
            "@myancommerce/nsx-common": ["libs/nsx-common/src/index.ts"],
            "@myancommerce/nsx-config": ["libs/nsx-config/src/index.ts"],
            "@myancommerce/nsx-logger": ["libs/nsx-logger/src/index.ts"],
            "@myancommerce/nsx-prisma": ["libs/nsx-prisma/src/index.ts"],
            "@myancommerce/nsx-role": ["libs/nsx-role/src/index.ts"],
            "@myancommerce/nsx-user": ["libs/nsx-user/src/index.ts"]
        }
    },
    "include": ["apps", "libs"],
    "exclude": ["node_modules", "tmp"]
}
